<% include partials/header %>
<div class="ui text container raised segment">
  <h1 class="ui header">Add new post</h1>
  <form class="ui form" action="/blogs" method="POST">
    <div class="field">
      <label for="title">Title:</label>
      <input type="text" name="blog[title]" placeholder="title" id="title">
    </div>
    <div class="field">
      <label for="url">Image url:</label>
      <input type="text" name="blog[imgURL]" placeholder="image url" id='url'>
    </div>
    <div class="field">
      <label for="content">Body Content:</label>
      <textarea name='blog[body]' id="content" placeholder="post content.."></textarea>
    </div>
    <button class="ui positive basic button" type="submit">Add post</button>
  </form>
</div>
<% include partials/footer %>
