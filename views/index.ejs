<% include partials/header %>
<div class="ui raised segment">
  <h1 class="ui header horizontal divider">Index of all blogs:</h1>
  <div class="ui divided items">
  <% blogs.forEach(blog => { %>
    <div class="ui item">
      <div class="ui medium image">
        <img src="<%= blog.imgURL %>" alt="blog image">
      </div>
      <div class="middle aligned content">
        <h2 class="header"><%= blog.title %></h2>
        <div class="meta">
          <span><%= blog.date.toDateString() %></span>
        </div>
        <div class="description">
          <p><%= blog.body.substring(0, 100) %>...</p>
        </div>
        <div class="extra">
          <a class="ui right floated violet basic button" href="/blogs/<%= blog._id %>">More info</a>
        </div>
      </div>
    </div>
  <% }) %>
  </div>
</div>
<% include partials/footer %>
