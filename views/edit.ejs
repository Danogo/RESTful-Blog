<% include partials/header %>
<div class="ui text container raised segment">
  <h1 class="ui header">Edit <%= blog.title %></h1>
  <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="field">
      <label for="title">Title:</label>
      <input type="text" name="blog[title]" value="<%= blog.title %>" id="title">
    </div>
    <div class="field">
      <label for="url">Image url:</label>
      <input type="text" name="blog[imgURL]" value="<%= blog.imgURL %>" id='url'>
    </div>
    <div class="field">
      <label for="content">Body Content:</label>
      <textarea name='blog[body]' id="content"><%= blog.body %></textarea>
    </div>
    <button class="ui blue basic button" type="submit">Confirm</button>
  </form>
</div>
<% include partials/footer %>
